{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "newLine": "lf",
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "jsx": "preserve",
        "sourceMap": true,
        "preserveConstEnums": false,
        "isolatedModules": false,
        "baseUrl": ".",
        "paths": {
            "~/*": ["src/*"],
            "-": ["build/isecad"],
            "-/*": ["build/*"]
        }
    },
    "include": ["src/**/*", "build/**/*"],
    "exclude": ["node_modules", "dist", "temp"]
}
